<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inodex.inoprod"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:smallScreens="false" />

    <uses-feature
        android:name="android.hardware.camera.barcode"
        android:required="false" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MenuAide"
            android:configChanges="orientation"
            android:label="@string/title_activity_menu_aide"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.Aide"
            android:configChanges="orientation"
            android:label="@string/title_activity_aide"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.Annuaire"
            android:configChanges="orientation"
            android:label="@string/title_activity_annuaire"
            android:screenOrientation="landscape" >
            <intent-filter>
                <data android:mimeType="vnd.android.cursor.item/vnd.com.v1.inoprod.business.employe" />
            </intent-filter>
        </activity>

        <provider
            android:name=".business.AnnuaireProvider"
            android:authorities="com.inodex.inoprod.business.annuairepersonel" />
        <provider
            android:name=".business.NomenclatureProvider"
            android:authorities="com.inodex.inoprod.business.nomenclature" />
        <provider
            android:name=".business.ProductionProvider"
            android:authorities="com.inodex.inoprod.business.production" />
        <provider
            android:name=".business.DureesProvider"
            android:authorities="com.inodex.inoprod.business.durees" />
        <provider
            android:name=".business.OutillageProvider"
            android:authorities="com.inodex.inoprod.business.outillage" />
        <provider
            android:name=".business.SequencementProvider"
            android:authorities="com.inodex.inoprod.business.sequencement" />
        <provider
            android:name=".business.RaccordementProvider"
            android:authorities="com.inodex.inoprod.business.raccordement" />
        <provider
            android:name=".business.KittingProvider"
            android:authorities="com.inodex.inoprod.business.kitting" />
        <provider
            android:name=".business.BOMProvider"
            android:authorities="com.inodex.inoprod.business.bom" />
        <provider
            android:name=".business.CheminementProvider"
            android:authorities="com.inodex.inoprod.business.cheminement" />

        <activity
            android:name=".activities.LoginProfil"
            android:label="@string/title_activity_login_profil" >
        </activity>
        <activity
            android:name=".activities.magasiniers.MainMenuMagasinier"
            android:label="@string/title_activity_main_menu_magasinier" >
        </activity>
        <activity
            android:name=".activities.magasiniers.ImportCoupeCables"
            android:label="@string/title_activity_import_coupe_cables" >
        </activity>
        <activity
            android:name=".activities.magasiniers.DebitCables"
            android:label="@string/title_activity_debit_cables" >
        </activity>
        <activity
            android:name=".activities.magasiniers.RegroupementCables"
            android:label="@string/title_activity_regroupement_cables" >
        </activity>
        <activity
            android:name=".activities.magasiniers.SaisieTracabiliteComposant"
            android:label="@string/title_activity_saisie_tracabilite_composant" >
        </activity>
        <activity
            android:name=".activities.magasiniers.ServitudeComposants"
            android:label="@string/title_activity_servitude_composants" >
        </activity>
        <activity
            android:name=".activities.magasiniers.KittingCablesComposants"
            android:label="@string/title_activity_kitting_cables_composants" >
        </activity>
        <activity
            android:name=".activities.cableur.MainMenuCableur"
            android:label="@string/title_activity_main_menu_cableur" >
        </activity>
        <activity
            android:name=".activities.cableur.RepriseBlindageTa"
            android:label="@string/title_activity_reprise_blindage_ta" >
        </activity>
        <activity
            android:name=".activities.cableur.DenudageSertissageContactTa"
            android:label="@string/title_activity_denudage_sertissage_contact_ta" >
        </activity>
        <activity
            android:name=".activities.controleur.MainMenuControleur"
            android:label="@string/title_activity_main_menu_controleur" >
        </activity>
        <activity
            android:name=".activities.preparateur.MainMenuPreparateur"
            android:label="@string/title_activity_main_menu_preparateur" >
        </activity>
        <activity
            android:name="com.inodex.inoprod.activities.InfoProduit"
            android:label="@string/title_activity_info_produit" >
