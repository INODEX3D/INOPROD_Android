<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/debitscomposants"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/exitButton1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/b12"
            android:src="@drawable/pause21" />
        
        <ImageButton
            android:id="@+id/infoButton1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/b12"
            android:src="@drawable/aide3" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/b12"
            android:src="@drawable/chrono2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/b30"
            android:layout_marginTop="38dp"
            android:text="Veuillez effectuer  la servitude de la référence par position de chariot "
            android:textSize="@dimen/b12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     		
            android:layout_alignTop="@+id/textView1"
            android:layout_margin="@dimen/b12"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:text="Désignation"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/b12" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="Fabricant/Fournisseur:"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/b12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dip"
                    android:text="Référence fabricant:"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/b12" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="30dip"
                    android:text="Référence interne"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/b12" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="Réf imposée"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/b12" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignTop="@+id/exitButton1"
            android:src="@drawable/pause31" />

</RelativeLayout>
