<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/debitscomposants"
 />
    
        <TextView
        android:id="@+id/timeDisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@id/imageView1"
        android:layout_below="@id/imageView1" />
        
        <ImageButton
            android:id="@+id/infoButton1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/aide3" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/b12"
            android:src="@drawable/chrono2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            android:text="@string/instructionServitude"
            android:textSize="@dimen/b12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     		
            android:layout_alignTop="@+id/textView1"
            android:layout_margin="@dimen/b12"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="105dp"
                    android:text="@string/designation"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/forT" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="@string/fabricantFournisseur"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/forT" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dip"
                    android:text="@string/referenceFabricant"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/forT" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/referenceInterne"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/forT" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="@string/referenceImposee"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/forT" />

            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTab"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/exitButton1"
        android:layout_toRightOf="@id/infoButton1" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/repereElectrique"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0000ff"
            android:textSize="@dimen/forTMin" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/numeroConnecteur"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0000ff"
            android:textSize="@dimen/forTMin" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/positionChariot"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0000ff"
            android:textSize="@dimen/forTMin" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/ordreRealisation"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0000ff"
            android:textSize="@dimen/forTMin" />
        
        <TextView
            android:id="@+id/temps"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/quantite"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0000ff"
            android:textSize="@dimen/forTMin" />
        
        <TextView
            android:id="@+id/textView14"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/unite"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0000ff"
            android:textSize="@dimen/forTMin" />
        
        <TextView
            android:id="@+id/textView15"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/numeroLot"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0000ff"
            android:textSize="@dimen/forTMin" />
        
                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/articleServi"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/forTMin" />

    </LinearLayout>

             <TextView
                 android:id="@+id/titleTab"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/textView2"
                 android:layout_centerHorizontal="true"
                 android:text="@string/etatDebits"
                 android:textSize="@dimen/forT" />
    
    <GridView
        android:id="@+id/gridview"
        android:layout_width="3105dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageButton1"
        android:layout_below="@+id/head"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/infoButton1"
        android:numColumns="1"
        android:stretchMode="columnWidth" >

    </GridView>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/exitButton1"
            android:layout_toLeftOf="@id/exitButton1"
            android:src="@drawable/pause31" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/imageButton1"
            android:layout_toLeftOf="@+id/imageButton1"
            android:src="@drawable/valider9" />

        <ImageButton
            android:id="@+id/exitButton1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/pause21" />

        <LinearLayout
            android:id="@+id/layout_servi"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/gridview"
            android:layout_toRightOf="@+id/gridview"
            android:orientation="vertical" >

        </LinearLayout>

</RelativeLayout>
