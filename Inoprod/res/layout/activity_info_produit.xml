<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}" >
    
       <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="16dp"
           android:text="@string/infoProduit" />
       
               <ImageButton
            android:id="@+id/exitButton1"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/exit" />

               <ImageView
                   android:id="@+id/imageView1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@+id/textView1"
                   android:src="@drawable/aide3" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/imageView1"
                   android:layout_marginLeft="@dimen/c1"
                   android:layout_marginTop="42dp"
                   android:orientation="vertical" >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="@dimen/b5" >

                       <TextView
                           android:id="@+id/textView2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="@dimen/b30"
                           android:text="@string/designationProduit"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />

                       <TextView
                           android:id="@+id/textView5"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="@dimen/b30"
                           android:text="@string/numeroHarnais"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />

                       <TextView
                           android:id="@+id/textView6"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/standard"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />
 

                   </LinearLayout>
                   
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="@dimen/b5" >

                       <TextView
                           android:id="@+id/textView2a"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="@dimen/b30"
                           android:text="@string/numeroSerie"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />

                       <TextView
                           android:id="@+id/textView5a"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="@dimen/b30"
                           android:text="@string/numeroTraitement"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />

                       <TextView
                           android:id="@+id/textView6a"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/numeroRevisionHarnais"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />
 

                   </LinearLayout>

                   <TextView
                       android:id="@+id/textView3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="@dimen/b5"
                       android:text="@string/referenceFichierSource"
                       android:textColor="#0000ff"
                       android:textSize="@dimen/b12" />
                   
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="@dimen/b5" >

                       <TextView
                           android:id="@+id/textView2b"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="@dimen/b30"
                           android:text="Durée de réference:"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />

                       <TextView
                           android:id="@+id/textView5b"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Date de début de cycle:"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />



                   </LinearLayout>
                   
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="@dimen/b5" >

                       <TextView
                           android:id="@+id/textView2c"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="@dimen/b30"
                           android:text="Durée mesurée:"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />

                       <TextView
                           android:id="@+id/textView5c"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Date de fin de cycle prévu:"
                           android:textColor="#0000ff"
                           android:textSize="@dimen/b12" />



                   </LinearLayout>

                   <TextView
                       android:id="@+id/textView4"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="@dimen/b5"
                       android:text="Taux de progression:"
                       android:textColor="#0000ff"
                       android:textSize="@dimen/b12" />


               </LinearLayout>

</RelativeLayout>
