<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}" >
    
     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="16dp"
         android:text="@string/debitscomposants"
         android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/exitButton1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/b12"
            android:src="@drawable/annuler6" />
        
        <ImageButton
            android:id="@+id/infoButton1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/b12"
            android:src="@drawable/aide3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/b30"
         
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="Veuillez scanner ou saisir la référence composant figurant sur l’emballage"
            android:textSize="@dimen/b12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000ff" 
                android:text="Debit:"
                android:textSize="@dimen/b12" 
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000ff" 
                android:text="Reference:"
                android:textSize="@dimen/b12" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_above="@+id/exitButton1"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/b12"
            android:src="@drawable/valider9" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:text="@string/referencearticle" >

            <requestFocus />
        </EditText>

</RelativeLayout>
