<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.v1.inoprod"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="69dp"
                android:layout_height="46dp"
                android:layout_margin="@dimen/b1"
                android:src="@drawable/pause3" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:text="Interruption d’activité courte. L’indication « Pause » clignote à l’écran"
                android:textSize="@dimen/activity_horizontal_margin" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action: stoppe le chrono de l’activité et se remet en fonction lorsque l’on reclique sur le bouton"
                android:textColor="#ff0000"
                android:textSize="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="69dp"
                android:layout_height="46dp"
                android:layout_margin="@dimen/b1"
                android:src="@drawable/pause2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:text="Pause repas ou fin de journée"
                android:textSize="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="69dp"
                android:layout_height="46dp"
                android:layout_margin="@dimen/b1"
                android:src="@drawable/aide5" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:text="Aide en ligne (accès aux fiches d’instruction)"
                android:textSize="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="69dp"
                android:layout_height="46dp"
                android:layout_margin="@dimen/b1"
                android:src="@drawable/valider8" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:text="Bouton maquette: Validation virtuelle effectué par le système pour passer au step suivant"
                android:textColor="#ff0000"
                android:textSize="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="69dp"
                android:layout_height="46dp"
                android:layout_margin="@dimen/b1"
                android:src="@drawable/aide2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:text="Accès à l’information générale du produit réalisé (désignation produit,n° de MSN, n° de traitement)"
                android:textSize="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="69dp"
                android:layout_height="46dp"
                android:layout_margin="@dimen/b1"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:text="Retour à l&apos;operation précédente"
                android:textSize="@dimen/activity_horizontal_margin" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action: Annule le chrono de la nouvelle fenêtre, revient à l’activité précédente,  relance le chrono sur l’opération précédente et additionne le nouveau temps avec le temps déjà enregistré"
                android:textColor="#ff0000"
                android:textSize="@dimen/activity_horizontal_margin" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/exitButton1"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/b12"
        android:src="@drawable/exit" />

</RelativeLayout>